<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.leomanzini.product.store.gui.ViewController">
   <children>
      <Label layoutX="130.0" layoutY="35.0" text="Calculate Sum">
         <font>
            <Font name="Courier New" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="firstNumber" layoutX="28.0" layoutY="97.0" promptText="First Number" />
      <TextField fx:id="secondNumber" layoutX="222.0" layoutY="97.0" promptText="Second Number" />
      <Label layoutX="196.0" layoutY="101.0" text="+" />
      <Button fx:id="sumButton" layoutX="180.0" layoutY="137.0" mnemonicParsing="false" onAction="#onSumButtonAction" text="Sum" />
      <Label layoutX="93.0" layoutY="195.0" text=" Result =">
         <font>
            <Font name="Courier New" size="18.0" />
         </font>
      </Label>
      <Label fx:id="result" layoutX="220.0" layoutY="195.0">
         <font>
            <Font name="Courier New" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
